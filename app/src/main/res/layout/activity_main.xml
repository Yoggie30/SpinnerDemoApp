<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey1"
    android:padding="@dimen/_10sdp"
    tools:context=".home.MainActivity">

    <com.google.android.material.textfield.MaterialAutoCompleteTextView
        android:id="@+id/stateAutoCompleteView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:background="@android:drawable/edit_text"
        android:completionThreshold="2"
        android:drawableEnd="@drawable/ic_icon_chevron_down"
        android:hint="@string/label_select_state"
        android:imeOptions="actionNext"
        android:padding="@dimen/_10sdp"
        android:focusable="false"
        android:clickable="true"
        android:singleLine="true"
        android:tag=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.MaterialAutoCompleteTextView
        android:id="@+id/cityAutoCompleteView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@android:drawable/edit_text"
        android:completionThreshold="2"
        android:focusable="false"
        android:clickable="true"
        android:drawableEnd="@drawable/ic_icon_chevron_down"
        android:hint="@string/label_select_city"
        android:imeOptions="actionNext"
        android:padding="@dimen/_10sdp"
        android:singleLine="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stateAutoCompleteView" />

</androidx.constraintlayout.widget.ConstraintLayout>


